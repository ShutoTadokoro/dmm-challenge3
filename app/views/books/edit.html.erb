<div class="container">
  <div class="row">
    <div class="col-lg-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <% if @book.errors.count==1 %>
          <%= @book.errors.count %>&nbsp;error prohibited this obj from being saved:
        <% else %>
          <%= @book.errors.count %>&nbsp;errors prohibited this obj from being saved:
        <% end %>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <label for="inputTitle">Title</label>
        <%= f.text_field :title , class:"form-control" %>
      </div>
      <div class="form-group">
        <label for="inputOpinion">Opinion</label>
        <%= f.text_area :body , class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Book" , class:"btn btn-success"%>
      </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>