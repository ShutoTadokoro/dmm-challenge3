<%= flash[:create] %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @book.user.get_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>Introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
            <tr></tr>
          </tbody>
        </table>
        <%= link_to edit_user_path(@book.user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog" aria-hidden="true"></i>
        <% end %>

      <h2 class="mt-5">New book</h2>
      <%= form_with model: @new_book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class:"form-control", id:"book_title" %>
        </div>
        <div class="form-group">
          <label for="book_body">Opinion</label>
          <%= f.text_area :body, class:"form-control", id:"book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success"  %>
        </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <%= link_to image_tag(@book.user.get_image(100,100)), user_path(@book.user.id) %>
              <br><%= link_to @book.user.name, user_path(@book.user.id) %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id) , class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" , class: "btn btn-sm btn-danger" %></td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>